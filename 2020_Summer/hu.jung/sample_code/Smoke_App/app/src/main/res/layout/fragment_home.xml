<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_curtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="curtime"
                android:textAlignment="viewStart"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_home_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Nickname"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="89dp"
            android:layout_height="76dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_heart_click" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_activityshift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="금일 흡연, 음주량" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/vp_home_main"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <LinearLayout
                android:id="@+id/layout_smoke"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aaaaff"
                android:orientation="vertical"
                android:visibility="visible" >
                <TextView
                    android:text="금연 시간"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text = "00일 00 : 00 : 00"
                    android:textSize="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_drink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff0011"
                android:orientation="vertical"
                android:visibility="invisible">
                <TextView
                    android:text="테스트글자입니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="음주" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="흡연" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>